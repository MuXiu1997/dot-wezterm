{
  "name": "dot-wezterm",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "bun@1.3.8",
  "description": "My WezTerm configuration.",
  "author": "MuXiu1997 <muxiu1997@muxiu1997.com> (https://github.com/MuXiu1997/)",
  "license": "MIT",
  "homepage": "https://github.com/MuXiu1997/dot-wezterm#readme",
  "keywords": [],
  "engines": {
    "bun": ">=1.3.8"
  },
  "scripts": {
    "build": "tstl",
    "dev": "tstl --watch",
    "lint": "eslint --fix . && tsc --noEmit",
    "postinstall": "bun x simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.7.1",
    "eslint": "9.39.2",
    "lint-staged": "16.2.7",
    "lua-types": "2.13.1",
    "simple-git-hooks": "2.13.1",
    "typescript": "5.9.3",
    "typescript-to-lua": "1.33.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
