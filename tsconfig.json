{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/v1.33.0/tsconfig-schema.json",
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["lua-types/5.4"],
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "tstl": {
    "luaTarget": "5.4",
    "luaLibImport": "inline",
    "noImplicitGlobalVariables": true,
    "sourceMapTraceback": false
  }
}
